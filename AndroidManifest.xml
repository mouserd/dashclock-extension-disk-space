<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionCode="${project.versionCode}"
          android:versionName="${project.version}"
          package="com.pixelus.dashclock.ext.mystorage">

  <uses-sdk
      android:minSdkVersion="9"
      android:targetSdkVersion="19"/>

  <application
      android:allowBackup="true"
      android:icon="@drawable/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/AppTheme"
      android:debuggable="${debuggable}">

    <activity
        android:name=".DiskSpaceExtensionActivity"
        android:label="@string/extension_label"
        android:exported="true"/>

    <service
        android:name=".DiskSpaceExtension"
        android:icon="@drawable/ic_launcher"
        android:label="@string/extension_label"
        android:permission="com.google.android.apps.dashclock.permission.READ_EXTENSION_DATA">
      <intent-filter>
        <action android:name="com.google.android.apps.dashclock.Extension"/>
      </intent-filter>

      <meta-data
          android:name="protocolVersion"
          android:value="2"/>
      <meta-data
          android:name="worldReadable"
          android:value="true"/>
      <meta-data
          android:name="description"
          android:value="@string/extension_description"/>

      <!-- A settings activity is optional - this extension doesn't have any settings -->
      <!--<meta-data-->
      <!--android:name="settingsActivity"-->
      <!--android:value=".MyStorageExtensionActivity" />-->
    </service>

    <meta-data android:name="com.crashlytics.ApiKey" android:value="e40d13de9e45727c7dc411977f11d4913a520bf1"/>
  </application>

  <uses-permission android:name="android.permission.INTERNET"/>
</manifest>